<div id="text">
  <h1><% video.title %></h1>
   <% INCLUDE incl/embed.tt %>

   <% IF video.language %>
      This video is in <b><% video.language_in_english %>.</b>
   <% END %>

   Length: <% video.length %> <a href="/source/<% video.source %>"><% video.source_name %></a> <% video.date %><br>
   <% INCLUDE incl/speaker.tt %>
  <% IF video.abstract %>
  <a href="<% video.abstract %>">abstract</a>
  <% END %>
  <br>
  <% video.description %>

